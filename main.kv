# kv file for rendering interpretation switcher windows
# Responsible for creating basic GUI that is displayed at all times
<Background>:
    FloatLayout:

        Label:
            pos_hint:{"x":0.0, "y": 0.05}
            size_hint:0.15,0.05
            text: "Interpretations"

        Widget:
            pos_hint:{"x":0.3, "y": 0.0}
            size_hint:0.001,1
            canvas:
                Color:
                    rgba: 1,1,1,1
                Line:
                    rectangle: (self.x, self.y, self.width, self.height)

        Label:
            pos_hint:{"x":0.3, "y": 0.05}
            size_hint:0.15,0.05
            text: "Music Sheet"

<MeasureWidget>: ### Layouts from Pierre-François Monville

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    canvas:
        Color:
            rgba: 0, 0,  0, 1

    ## Treble Clef
        Line:
            width: 1.1
            points: [self.x, self.top - self.start_line_treble, self.x + self.width, self.top - self.start_line_treble]

        Line:
            width: 1.1
            points: [self.x, self.top - (self.start_line_treble + self.line_separation), self.x + self.width, self.top - (self.start_line_treble + self.line_separation)]

        Line:
            width: 1.1
            points: [self.x, self.top - (self.start_line_treble + 2 * self.line_separation), self.x + self.width, self.top - (self.start_line_treble + 2 * self.line_separation)]

        Line:
            width: 1.1
            points: [self.x, self.top - (self.start_line_treble + 3 * self.line_separation), self.x + self.width, self.top - (self.start_line_treble + 3 * self.line_separation)]

        Line:
            width: 1.1
            points: [self.x, self.top - (self.start_line_treble + 4 * self.line_separation), self.x + self.width, self.top - (self.start_line_treble + 4 * self.line_separation)]

    # Measure End
        Line:
            width: 1.1
            points: [self.x + self.width, self.top - self.start_line_treble, self.x + self.width, self.top - (self.start_line_treble + self.line_separation * 4)]

        Line:
            width: 1.1
            points: [self.x, self.top - self.start_line_treble, self.x, self.top - (self.start_line_treble + self.line_separation * 4)]


    # Bass Clef
        Line:
            width: 1.1
            points: [self.x, self.top - self.start_line_bass, self.x + self.width, self.top - self.start_line_bass]

        Line:
            width: 1.1
            points: [self.x, self.top - (self.start_line_bass + self.line_separation), self.x + self.width, self.top - (self.start_line_bass + self.line_separation)]

        Line:
            width: 1.1
            points: [self.x, self.top - (self.start_line_bass + 2 * self.line_separation), self.x + self.width, self.top - (self.start_line_bass + 2 * self.line_separation)]

        Line:
            width: 1.1
            points: [self.x, self.top - (self.start_line_bass + 3 * self.line_separation), self.x + self.width, self.top - (self.start_line_bass + 3 * self.line_separation)]

        Line:
            width: 1.1
            points: [self.x, self.top - (self.start_line_bass + 4 * self.line_separation), self.x + self.width, self.top - (self.start_line_bass + 4 * self.line_separation)]


    # Measure End
        Line:
            width: 1.1
            points: [self.x + self.width, self.top - self.start_line_bass, self.x + self.width, self.top - (self.start_line_bass + self.line_separation * 4)]

        Line:
            width: 1.1
            points: [self.x, self.top - self.start_line_bass, self.x, self.top - (self.start_line_bass + self.line_separation * 4)]


<StaveLayout>: ### Layouts from Pierre-François Monville

    orientation: 'horizontal'
    padding: 15, 0, 15, 0

    MeasureWidget:
        size_hint: (0.5,1)

        canvas:
            Line:
                width: 1.1
                points: [self.x, self.top - self.start_line_treble , self.x, self.top - (self.start_line_bass + self.line_separation * 4)]

        Image:
            source: './resources/clef_de_sol.png'
            size: 42, 95
            pos: self.parent.x, self.parent.top - (self.parent.start_line_treble + 5 * self.parent.line_separation + self.parent.line_separation/2)
            size_hint: None, None
            allow_stretch: True
            keep_ratio: False

        Image:
            source: './resources/clef_de_fa.png'
            size: 50, 63
            pos: self.parent.x, self.parent.top - (self.parent.start_line_bass + self.parent.line_separation*4)
            size_hint: None, None
            allow_stretch: True
            keep_ratio: False
